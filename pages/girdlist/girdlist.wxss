.item-container {
  display: flex;
  flex-flow: row wrap;
  padding: 0 12rpx;
  justify-content: space-between;
}

.item {
  width: calc(50% - 5rpx);
}

.item-image {
  width: 100%;
  border-radius: 10rpx;
}

.loading{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #666;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}