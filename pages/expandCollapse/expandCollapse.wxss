/* pages/expandCollapse/expandCollapse.wxss */
.view-container {
  width: 100%;
  height: 100%;
}

.single-line-text {
  width: 500rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.multi-line-text {
  font-size: 28rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.expand-collapse-line {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

@font-face {
  font-family: 'iconfont';
  /* project id 2034302 */
  src: url('https://at.alicdn.com/t/font_2034302_h20jox63x2n.eot');
  src: url('https://at.alicdn.com/t/font_2034302_h20jox63x2n.eot?#iefix') format('embedded-opentype'),
    url('https://at.alicdn.com/t/font_2034302_h20jox63x2n.woff2') format('woff2'),
    url('https://at.alicdn.com/t/font_2034302_h20jox63x2n.woff') format('woff'),
    url('https://at.alicdn.com/t/font_2034302_h20jox63x2n.ttf') format('truetype'),
    url('https://at.alicdn.com/t/font_2034302_h20jox63x2n.svg#iconfont') format('svg');
}

.myiconfont {
  font-family: "Iconfont" !important;
  font-size: 80rpx;
  font-style: normal;
  color: #ccc;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-arrow-expand:before {
  content: "\e63b";
}

.icon-arrow-collapse:before {
  content: "\e63c";
}

.text-default{
  background-color: aqua;
  font-size: 32rpx;
  font-style: normal;
  line-height: 42rpx;
}

.text-expand {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.text-collapse {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 3;
}